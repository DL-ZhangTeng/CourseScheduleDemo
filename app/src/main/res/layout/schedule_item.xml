<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/linear_syllabus"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ss_time"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:layout_weight="1"
        android:maxLines="2"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textColor="#ff999999"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/monday_ss"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textColor="#ff999999"
        android:text="--"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/tuesday_ss"
        android:layout_width="0dp"
        android:textColor="#ff999999"
        android:layout_weight="1"
        android:textSize="14sp"
        android:text="--"
        android:layout_gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/wednesday_ss"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:textColor="#ff999999"
        android:text="--"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/thursday_ss"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:textColor="#ff999999"
        android:layout_weight="1"
        android:text="--"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/friday_ss"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:maxLines="2"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textColor="#ff999999"
        android:text="--"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/saturday_ss"
        android:layout_width="0dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:layout_gravity="center"
        android:ellipsize="end"
        android:textColor="#ff999999"
        android:layout_weight="1"
        android:gravity="center"
        android:text="--"
        android:layout_height="45dp" />

    <TextView
        android:id="@+id/sunday_ss"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="2"
        android:text="--"
        android:textColor="#ff999999"
        android:textSize="14sp" />

</LinearLayout>